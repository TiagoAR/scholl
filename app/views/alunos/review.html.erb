<h1>Relatorio</h1>

<table>
  <thead>
    <tr>
      <th width="100px" >Aluno</th>
      <th width="100px">Nota 1</th>
      <th width="100px">Nota 2</th>
      <th width="100px">Nota 3</th>
      <th width="100px">Nota 4</th>
      <th width="100px">Media</th>
      <th>Resultado</th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome %></td>
        <td><%= aluno.nota1 %></td>
        <td><%= aluno.nota2 %></td>
        <td><%= aluno.nota3 %></td>
        <td><%= aluno.nota4 %></td>
        <td><%= media(aluno) %></td>
        <td><%= situacaoAluno(aluno) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
